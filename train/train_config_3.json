{
    "data": {
        "block_size":8,
        "block_num": 32
    },
    "bf16": {
        "enabled": true
    },
    "fp16": {
        "enabled": false,
        "auto_cast": "true",
        "loss_scale": 0,
        "loss_scale_window": 1000,
        "initial_scale_power": 14,
        "hysteresis": 2,
        "min_loss_scale": 1
    },
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": {
                "lora":3e-5,
                "talk":7.5e-5,
                "lm_head": 1e-6
            },
            "weight_decay": {
                "lora":0.0,
                "talk":0.0,
                "lm_head":0.0
            },
            "adam_w_mode": true,
            "betas": [
                    0.9,
                    0.95
                  ]
        }
    },
    "scheduler": {
        "type": "WarmupDecayLR",
        "params": {
            "warmup_min_lr": 0,
            "warmup_max_lr": 3e-5,
            "warmup_num_steps": 7200,
            "total_num_steps": 900000
        }
    },
    "zero_optimization": {
        "stage": 2,
        "stage3_gather_16bit_weights_on_model_save": true,
        "allgather_partitions": true,
        "allgather_bucket_size": 2e8,
        "overlap_comm": true,
        "reduce_scatter": true,
        "reduce_bucket_size": 2e8,
        "contiguous_gradients": true
    },
    "gradient_accumulation_steps": 2,
    "gradient_clipping": 0.5,
    "steps_per_print": 2000,
    "train_micro_batch_size_per_gpu": 1,
    "wall_clock_breakdown": false,
    "training_parameters": {
        "wandb_name": "lora-2-decoder-layer-r-s-d",
        "bs": 1,
        "num_epochs": 40,
        "num_workers": 2,
        "max_len": 4096,
        "config_path": "model/talk_ml_config.json",
        "gradient_checkpointing": true
    },
    "use_lora": {
        "enabled":true
    },
    "train_lm_head": {
        "enabled":false
    },
    "rps_residual": {
        "enabled": true,
        "type": "gated",
        "eta": 0.2,
        "norm": "rmsnorm"
    },
    "soft_inputs": {
        "enabled": true,
        "top_k": 32,
        "temperature": 1.5
    },
    "detach_recurrence": {
        "enabled": true,
        "every_r_steps": 4
    },
    "denoise": {
        "steps": 8,
        "reveal_k": 1,
        "reveal_prob": 1.0,
        "reveal_strategy": "random"
    }
}